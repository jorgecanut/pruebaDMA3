{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug STM32H723 (OpenOCD)",
      "type": "cortex-debug",
      "request": "launch",

      "servertype": "openocd",

      "executable": "out/build/latest.elf",

      "device": "STM32H723ZG",

      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32h7x.cfg"
      ],

      "runToEntryPoint": "main",

      "cwd": "${workspaceFolder}",

      "svdFile": ".vscode/STM32H723.svd",

      "showDevDebugOutput": "none"
    }
  ]
}
